<project name="litle-sdk-for-java" default="dist" basedir="..">
	<description>
        Builds and tests litle-sdk-for-java
    </description>
	<!-- set global properties for this build -->
	<property name="src" location="src" />
	<property name="bin" location="bin" />
	<property name="dist" location="dist" />
	<property name="lib" location="lib" />
	<property name="generated" location="generated" />
	<property name="test" location="test" />

	<property name="jaxb" location="${lib}/jaxb/lib" />
	<property name="httpclient" location="${lib}/httpcomponents-client-4.1.3/lib" />
	<property name="cxf" location="${lib}/apache-cxf-2.5.2/lib" />
	<property name="junit" location="${lib}/junit" />

	<path id="lib.path.ref">
		<fileset dir="${jaxb}" includes="*.jar" />
	</path>
	
	<path id="classpath.ref">
		<pathelement location="${jaxb}/activation.jar" />
		<pathelement location="${jaxb}/jaxb-api.jar" />
		<pathelement location="${jaxb}/jaxb-impl.jar" />
		<pathelement location="${jaxb}/jsr173_1.0_api.jar" />
		<pathelement location="${cxf}/cxf-2.5.2.jar" />
		<pathelement location="${httpclient}/httpclient-4.1.3.jar" />
		<pathelement location="${httpclient}/httpcore-4.1.4.jar" />
		<pathelement location="${httpclient}/commons-logging-1.1.1.jar" />
	</path>

	<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
		<classpath>
			<fileset dir="${basedir}/lib/jaxb/lib" includes="*.jar" />
		</classpath>
	</taskdef>

	<target name="init">
		<mkdir dir="${bin}" />
		<mkdir dir="${generated}" />
	</target>

	<target name="generate">
		<xjc schema="xsd/litleOnline_v8.10.xsd" package="com.litle.sdk.generate" destdir="${generated}" />
	</target>

	<target name="compile" depends="clean,init,generate" description="compile the source ">
		<javac destdir="${bin}" includeantruntime="false" source="1.5" target="1.5" classpathref="classpath.ref">
			<compilerarg value="-Xbootclasspath/p:${toString:lib.path.ref}" />
			<src path="src" />
			<src path="generated" />
		</javac>
	</target>

	<target name="test" depends="dist">
		<mkdir dir="${bin}/test" />
		<javac destdir="${bin}/test" includeantruntime="false" source="1.5" target="1.5" classpathref="classpath.ref">
			<compilerarg value="-Xbootclasspath/p:${toString:lib.path.ref}" />
			<src path="test/functional" />
			<classpath>
				<pathelement location="${dist}/lib/litle-sdk-for-java.jar"/>
				<pathelement location="${junit}/junit-4.8.2.jar"/>
			</classpath>
		</javac>
		<jar jarfile="${dist}/lib/litle-sdk-for-java-tests.jar" basedir="${bin}/test" />

		<junit haltonfailure="true" printsummary="true">
			<classpath>
				<path refid="classpath.ref"/>
				<pathelement location="${junit}/junit-4.8.2.jar" />
				<pathelement location="${dist}/lib/litle-sdk-for-java-tests.jar" />
				<pathelement location="${dist}/lib/litle-sdk-for-java.jar"/>
			</classpath>

			<formatter type="plain" usefile="false" />
			
			<batchtest>
				<fileset dir="test/functional">
					<include name="**/Test*.java" />
				</fileset>
			</batchtest>
	
		</junit>
	</target>

	<target name="dist" depends="compile" description="generate the distribution">
		<mkdir dir="${dist}/lib" />

		<jar jarfile="${dist}/lib/litle-sdk-for-java.jar" basedir="${bin}" />
	</target>
	
	<target name="all" depends="dist,test" description="Make sure everything is good">
		
	</target>

	<target name="clean" description="clean up">
		<delete dir="${bin}" />
		<delete dir="${generated}" />
		<delete dir="${dist}" />
	</target>
</project>